<UserControl x:Class="ElectricalCalculator.Symbols.Ground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalCalculator.Symbols"
             mc:Ignorable="d" Background="{x:Null}"
             d:DesignHeight="40" d:DesignWidth="30">
    <UserControl.Resources>
        <Style TargetType="Line">
            <Setter Property="Stroke" Value="{StaticResource SchemMainShape}"/>
            <Setter Property="StrokeEndLineCap" Value="Round"/>
            <Setter Property="StrokeStartLineCap" Value="Round"/>
            <Setter Property="StrokeThickness" Value="2.5"/>
        </Style>
    </UserControl.Resources>
    <Canvas Width="Auto" Height="Auto">
        <Line X1="15" Y1="0" X2="15" Y2="20" StrokeStartLineCap="Flat"/>
        <Line X1="0" Y1="20" X2="30" Y2="20"/>
        <Line X1="5" Y1="25" X2="25" Y2="25"/>
        <Line X1="10" Y1="30" X2="20" Y2="30"/>
        <Line X1="14" Y1="35" X2="16" Y2="35"/>
    </Canvas>
</UserControl>
