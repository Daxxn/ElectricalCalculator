<UserControl x:Class="ElectricalCalculator.Symbols.CapacitorPolar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalCalculator.Symbols"
             mc:Ignorable="d"
             Width="20" Height="40">
    <Canvas Width="Auto" Height="Auto">
        <Line X1="10" Y1="0" X2="10" Y2="16"/>
        <Line X1="10" Y1="22" X2="10" Y2="40"/>
        <Path Data="M 0.25,16 19.75,16 19.75,20 0.25,20 0.25,15.25" Stroke="{StaticResource SchemNetColor}" StrokeThickness="1.5"/>
        <Line X1="-0.5" Y1="24" X2="20.5" Y2="24" StrokeThickness="4"/>
        <TextBlock Canvas.Left="-0.5" Canvas.Top="5" FontSize="9" Foreground="{StaticResource SchemNetColor}">+</TextBlock>
    </Canvas>
</UserControl>
